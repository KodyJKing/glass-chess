{
    "include": [
        "src"
    ],
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types",
            "./src/build/typings"
        ],
        "target": "ESNEXT",
        "module": "commonjs",
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": false,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "esModuleInterop": true
    }
}